@model ToDoList.Models.Task;

<div class="form-horizontal">
    <form action="Edit" method="Post">

        <input type="hidden" name="id" value="@Model.id"/>   

        <div class="form-group">
            <label>Name</label>
            <input  class="form-control" type="text" name="name" value="@Model.name"/>
        </div>

        <div class="form-group">
            <label>Priority</label>
            <input  class="form-control" type="text" name="priority" value="@Model.priority"/>
        </div>

        <div class="form-group">
            <label>Deadline</label>
            <input  class="form-control" type="text" name="deadline" value="@Model.deadline"/>
        </div>

        <div class="form-group">
            <label>Percentage Completed</label>
            <input  class="form-control" type="text" name="percentageCompleted" value="@Model.percentageCompleted"/>
        </div>

        <input  class="btn btn-primary" type="submit" value="Save"/>

    </form>
</div>