@model ToDoList.Models.Task;

<div class="form-horizontal">
    <form action="Create" method="Post">

        <div class="form-group">
            <label>Name</label>
            <input  class="form-control" type="text" name="name"/>
        </div>

        <div class="form-group">
            <label>Priority</label>
            <input  class="form-control" type="text" name="priority"/>
        </div>

        <div class="form-group">
            <label>Deadline</label>
            <input  class="form-control" type="text" name="deadline"/>
        </div>

        <div class="form-group">
            <label>Percentage Completed</label>
            <input  class="form-control" type="text" name="percentageCompleted"/>
        </div>

        <input class="btn btn-primary" type="submit" value="Save" />

    </form>
</div>
